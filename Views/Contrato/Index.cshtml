@model IEnumerable<INMO_SOAZO_2024.Models.Contrato>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Listado de contratos</h3>

<p>
    <a asp-action="Editar" method = "post">Agregar un nuevo contrato</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaInicio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaTerm)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Arrendatario)
            </th>
            <th>
                ACCIONES
            </th>
           
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaInicio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaTerm)
            </td>
            <td>
                @(item.Arrendatario.Nombre + " " + item.Arrendatario.Apellido)
            </td>
           
          
              <td>
                 <a asp-action="Detalles" asp-route-id=@item.Id><i class="fa fa-eye text-secondary" style="font-size:25px;"></i></a>
                    <a asp-action="Editar" asp-route-id=@item.Id><i class="fa fa-pencil text-success" style="font-size:25px;"></i></a>
                    <a asp-action="Eliminar" asp-route-id=@item.Id><i class="fa fa-trash text-danger" style="font-size:25px;"></i></a>
                </td>
        </tr>
}
    </tbody>
</table>
